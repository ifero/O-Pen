<s:SurfaceWindow x:Class="InkOnThat.SurfaceWindow1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/surface/2008"
    Title="InkOnThat" Cursor="None"
    >
    <Canvas Background="Gray" Cursor="None">
        <s:SurfaceInkCanvas x:Name="inkBoard" Background="Black"
                            Canvas.Top="0" Canvas.Left="0"
                            TouchDown="onTouchDown"
                            TouchMove="onTouchDown"
                            PreviewTouchDown="onTouchDown"
                            Width="1700"
                            Height="900"
                            MaxHeight="900"
                            MinHeight="900"
                            MinWidth="1700"
                            MaxWidth="1700"
                            Cursor="None"
            UsesTouchShape="False"/>
        <s:SurfaceButton x:Name="erase_Button" Click="onEraseClick" Canvas.Top="0" Canvas.Left="1710" Width="200" Height="100">Erase/Ink</s:SurfaceButton>
        <s:SurfaceButton x:Name="new_board" Click="onClearClick" Canvas.Top="120" Canvas.Left="1710" Width="200" Height="100">Clear</s:SurfaceButton>
    </Canvas>
</s:SurfaceWindow>
